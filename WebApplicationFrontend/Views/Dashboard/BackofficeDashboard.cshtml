@model WebApplicationFrontend.Services.WebUserLoginResponse
@{
    ViewData["Title"] = "Back Office Dashboard";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-tachometer-alt text-primary me-2"></i>
                        Back Office Dashboard
                    </h1>
                    <p class="text-muted mb-0">Welcome back, @Model.FullName</p>
                </div>
                <div class="d-flex align-items-center">
                    <span class="badge bg-primary me-3">
                        <i class="fas fa-user-shield me-1"></i>
                        @Model.Role
                    </span>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle me-1"></i>
                            @Model.FullName
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <!-- Web Users Stats -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title opacity-75">Staff Users</h6>
                            <h2 class="mb-0">@ViewBag.TotalWebUsers</h2>
                            <small class="opacity-75">Backoffice & Operators</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users-cog fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- EV Owners Stats -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title opacity-75">EV Owners</h6>
                            <h2 class="mb-0">@ViewBag.TotalEVOwners</h2>
                            <small class="opacity-75">@ViewBag.ApprovedEVOwners approved</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-car fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Pending Approvals -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title opacity-75">Pending Approvals</h6>
                            <h2 class="mb-0">@ViewBag.PendingApprovals</h2>
                            <small class="opacity-75">Awaiting review</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Active Users -->
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title opacity-75">Active Accounts</h6>
                            <h2 class="mb-0">@ViewBag.ActiveEVOwners</h2>
                            <small class="opacity-75">Active EV owners</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-check fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Quick Actions -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-bottom-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a href="#" class="btn btn-outline-primary d-flex align-items-center">
                            <i class="fas fa-user-plus me-3"></i>
                            <div class="text-start">
                                <div class="fw-semibold">Manage Staff Users</div>
                                <small class="text-muted">Create Backoffice & Operators</small>
                            </div>
                        </a>
                        <a href="#" class="btn btn-outline-success d-flex align-items-center">
                            <i class="fas fa-users me-3"></i>
                            <div class="text-start">
                                <div class="fw-semibold">EV Owner Management</div>
                                <small class="text-muted">View & manage customer accounts</small>
                            </div>
                        </a>
                        <a href="#" class="btn btn-outline-warning d-flex align-items-center">
                            <i class="fas fa-user-check me-3"></i>
                            <div class="text-start">
                                <div class="fw-semibold">Approve Registrations</div>
                                <small class="text-muted">Review pending EV owner requests</small>
                            </div>
                        </a>
                        <a href="#" class="btn btn-outline-info d-flex align-items-center">
                            <i class="fas fa-charging-station me-3"></i>
                            <div class="text-start">
                                <div class="fw-semibold">Charging Stations</div>
                                <small class="text-muted">Manage charging station network</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Overview -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-bottom-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line text-success me-2"></i>
                        System Overview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Staff Breakdown -->
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Staff Distribution</h6>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Backoffice Users:</span>
                                <span class="fw-bold text-primary">@ViewBag.BackofficeUsers</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Station Operators:</span>
                                <span class="fw-bold text-success">@ViewBag.StationOperators</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Active Staff:</span>
                                <span class="fw-bold text-info">@ViewBag.ActiveWebUsers</span>
                            </div>
                        </div>
                        
                        <!-- Customer Breakdown -->
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Customer Overview</h6>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Total Registrations:</span>
                                <span class="fw-bold">@ViewBag.TotalEVOwners</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Approved Users:</span>
                                <span class="fw-bold text-success">@ViewBag.ApprovedEVOwners</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Pending Review:</span>
                                <span class="fw-bold text-warning">@ViewBag.PendingApprovals</span>
                            </div>
                        </div>
                    </div>
                    
                    @if (ViewBag.PendingApprovals > 0)
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Action Required:</strong> You have @ViewBag.PendingApprovals EV owner registration(s) pending approval.
                            <a href="#" class="alert-link ms-2">Review Now</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-bottom-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock text-info me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">System Login</h6>
                                <p class="text-muted mb-1">You logged into the system successfully</p>
                                <small class="text-muted">Just now</small>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">New EV Owner Registration</h6>
                                <p class="text-muted mb-1">New customer registered via mobile app - awaiting approval</p>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">EV Owner Approved</h6>
                                <p class="text-muted mb-1">Customer account activated and approved for service</p>
                                <small class="text-muted">5 hours ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline::before {
        content: '';
        position: absolute;
        left: 15px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #dee2e6;
    }
    
    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }
    
    .timeline-marker {
        position: absolute;
        left: -23px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid white;
    }
    
    .timeline-content {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border-left: 3px solid #007bff;
    }
</style>