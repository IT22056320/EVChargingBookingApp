@model WebApplicationFrontend.Models.BookingStatisticsViewModel
@{
    ViewData["Title"] = "Booking Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Booking Statistics</h1>
                <a href="@Url.Action("Index", "BookingManagement")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Bookings
                </a>
            </div>

            <!-- Filter Section -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Date Range Filter</h5>
                </div>
                <div class="card-body">
                    <form method="get" action="@Url.Action("Statistics")">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="fromDate">From Date</label>
                                    <input type="date" name="fromDate" id="fromDate" class="form-control" 
                                           value="@(Model.FromDate?.ToString("yyyy-MM-dd"))">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="toDate">To Date</label>
                                    <input type="date" name="toDate" id="toDate" class="form-control" 
                                           value="@(Model.ToDate?.ToString("yyyy-MM-dd"))">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <div>
                                        <button type="submit" class="btn btn-primary btn-block">
                                            <i class="fas fa-search"></i> Apply Filter
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <div>
                                        <a href="@Url.Action("Statistics")" class="btn btn-outline-secondary btn-block">
                                            <i class="fas fa-times"></i> Clear Filter
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-calendar-alt fa-2x text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ml-3">
                                    <div class="h4 mb-0">@Model.Statistics.TotalBookings</div>
                                    <div class="text-muted">Total Bookings</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-clock fa-2x text-warning"></i>
                                </div>
                                <div class="flex-grow-1 ml-3">
                                    <div class="h4 mb-0">@Model.Statistics.PendingBookings</div>
                                    <div class="text-muted">Pending</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-check fa-2x text-success"></i>
                                </div>
                                <div class="flex-grow-1 ml-3">
                                    <div class="h4 mb-0">@Model.Statistics.ApprovedBookings</div>
                                    <div class="text-muted">Approved</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-flag-checkered fa-2x text-primary"></i>
                                </div>
                                <div class="flex-grow-1 ml-3">
                                    <div class="h4 mb-0">@Model.Statistics.CompletedBookings</div>
                                    <div class="text-muted">Completed</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-ban fa-2x text-danger"></i>
                                </div>
                                <div class="flex-grow-1 ml-3">
                                    <div class="h4 mb-0">@Model.Statistics.CancelledBookings</div>
                                    <div class="text-muted">Cancelled</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-times fa-2x text-dark"></i>
                                </div>
                                <div class="flex-grow-1 ml-3">
                                    <div class="h4 mb-0">@Model.Statistics.RejectedBookings</div>
                                    <div class="text-muted">Rejected</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Statistics -->
            <div class="row mb-4">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Revenue & Duration</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="h2 text-success mb-0">$@Model.Statistics.TotalRevenue.ToString("F2")</div>
                                        <div class="text-muted">Total Revenue</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="h2 text-info mb-0">@Model.Statistics.AverageBookingDuration.ToString("F0") min</div>
                                        <div class="text-muted">Avg Duration</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Status Distribution</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="statusChart" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <a href="@Url.Action("Index", "BookingManagement", new { status = "0" })" 
                                       class="btn btn-warning btn-block">
                                        <i class="fas fa-clock"></i> View Pending Bookings
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("Index", "BookingManagement", new { status = "1" })" 
                                       class="btn btn-success btn-block">
                                        <i class="fas fa-check"></i> View Approved Bookings
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("Index", "BookingManagement", new { fromDate = DateTime.Today })" 
                                       class="btn btn-primary btn-block">
                                        <i class="fas fa-calendar-day"></i> Today's Bookings
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a href="@Url.Action("Export", "BookingManagement")" 
                                       class="btn btn-info btn-block">
                                        <i class="fas fa-download"></i> Export All Data
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Status Distribution Chart
        const ctx = document.getElementById('statusChart').getContext('2d');
        const statusChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Pending', 'Approved', 'Completed', 'Cancelled', 'Rejected'],
                datasets: [{
                    data: [
                        @Model.Statistics.PendingBookings,
                        @Model.Statistics.ApprovedBookings,
                        @Model.Statistics.CompletedBookings,
                        @Model.Statistics.CancelledBookings,
                        @Model.Statistics.RejectedBookings
                    ],
                    backgroundColor: [
                        '#ffc107', // Warning (Pending)
                        '#28a745', // Success (Approved)
                        '#007bff', // Primary (Completed)
                        '#dc3545', // Danger (Cancelled)
                        '#343a40'  // Dark (Rejected)
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 20
                        }
                    }
                }
            }
        });
    </script>
}